        $weighting       = "expndecay";
        $lc_modelling    = "bag-of-words";
    
        &run_all_words; &print_result;
        
        $stemming        = "unstemmed";
        $weighting       = "expndecay";
        $lc_modelling    = "bag-of-words";
    
        &run_all_words; &print_result;
        
        $stemming        = "unstemmed";
        $weighting       = "expndecay";
        $lc_modelling    = "adj-separate-LR";
    
        &run_all_words; &print_result;
        
        $stemming        = "unstemmed";
        $weighting       = "stepped";
        $lc_modelling    = "adj-separate-LR";
    
        &run_all_words; &print_result;
        
        $stemming        = "unstemmed";
        $weighting       = "custom";
        $lc_modelling    = "adj-separate-LR";
    
        &run_all_words; &print_result;
        
